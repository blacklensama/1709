<Window x:Class="Wxwinter.BPM.WFDesigner.UserSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserSelection" Height="500" Width="250"
        Loaded="Window_Loaded"
        Background="#FFF0F0F0"
        ResizeMode="NoResize">
    <Window.Resources>
        <DataTemplate x:Key="ListBoxTemplate1">
            <StackPanel Margin="5"
                        Orientation="Horizontal">
                <TextBlock FontSize="16"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Text="{Binding Path=User_Id}" />
                <TextBlock Text="   " />
                <TextBlock FontSize="16"
                           HorizontalAlignment="Center"
                           Text="{Binding User_Name}" />
            </StackPanel>
        </DataTemplate>
        <Style TargetType="Button">
            <Setter Property="Foreground"
                    Value="Black" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="back"
                                Opacity="0.8"
                                CornerRadius="3">
                            <Border.BitmapEffect>
                                <DropShadowBitmapEffect Opacity="0"
                                                        ShadowDepth="0"
                                                        Color="{Binding RelativeSource={RelativeSource TemplatedParent},Path=(Button.Background).(SolidColorBrush.Color)}" />
                            </Border.BitmapEffect>
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0"
                                                     EndPoint="0,1.5">
                                    <GradientStopCollection>
                                        <GradientStop Color="{Binding RelativeSource={RelativeSource TemplatedParent},Path=(Button.Background).(SolidColorBrush.Color)}"
                                                      Offset="0" />
                                        <GradientStop Color="{Binding RelativeSource={RelativeSource TemplatedParent},Path=(Button.Background).(SolidColorBrush.Color)}"
                                                      Offset="0.4" />
                                        <GradientStop Color="#FFF"
                                                      Offset="1" />
                                    </GradientStopCollection>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border x:Name="fore"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    BorderBrush="#5555">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0"
                                                         EndPoint="0,1">
                                        <GradientStopCollection>
                                            <GradientStop Color="#6FFF"
                                                          Offset="0.5" />
                                            <GradientStop Color="#1111"
                                                          Offset="0.51" />
                                        </GradientStopCollection>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ContentPresenter x:Name="content"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Content="{TemplateBinding  Content}">
                                    <ContentPresenter.BitmapEffect>
                                        <DropShadowBitmapEffect  Color="#000"
                                                                 Direction="-90"
                                                                 ShadowDepth="2"
                                                                 Softness="0.1"
                                                                 Opacity="0.3" />
                                    </ContentPresenter.BitmapEffect>
                                </ContentPresenter>
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation To="0.6"
                                                             Duration="0:0:0.2"
                                                             Storyboard.TargetName="back"
                                                             Storyboard.TargetProperty="(Border.BitmapEffect).(DropShadowBitmapEffect.Opacity)" />
                                            <ColorAnimation To="#AFFF"
                                                            BeginTime="0:0:0.2"
                                                            Duration="0:0:0.2"
                                                            Storyboard.TargetName="fore"
                                                            Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[0].(GradientStop.Color)" />
                                            <ColorAnimation To="#3FFF"
                                                            BeginTime="0:0:0.2"
                                                            Duration="0:0:0.2"
                                                            Storyboard.TargetName="fore"
                                                            Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Duration="0:0:0.2"
                                                             Storyboard.TargetName="back"
                                                             Storyboard.TargetProperty="(Border.BitmapEffect).(DropShadowBitmapEffect.Opacity)" />
                                            <ColorAnimation Duration="0:0:0.2"
                                                            Storyboard.TargetName="fore"
                                                            Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[0].(GradientStop.Color)" />
                                            <ColorAnimation Duration="0:0:0.2"
                                                            Storyboard.TargetName="fore"
                                                            Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <!--按钮按下弹起-->
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation To="0.3"
                                                             Duration="0:0:0.1"
                                                             Storyboard.TargetName="back"
                                                             Storyboard.TargetProperty="(Border.BitmapEffect).(DropShadowBitmapEffect.Opacity)" />
                                            <ColorAnimation To="#3AAA"
                                                            Duration="0:0:0.1"
                                                            Storyboard.TargetName="fore"
                                                            Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[0].(GradientStop.Color)" />
                                            <ColorAnimation To="#2111"
                                                            Duration="0:0:0.1"
                                                            Storyboard.TargetName="fore"
                                                            Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Duration="0:0:0.1"
                                                             Storyboard.TargetName="back"
                                                             Storyboard.TargetProperty="(Border.BitmapEffect).(DropShadowBitmapEffect.Opacity)" />
                                            <ColorAnimation Duration="0:0:0.1"
                                                            Storyboard.TargetName="fore"
                                                            Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[0].(GradientStop.Color)" />
                                            <ColorAnimation Duration="0:0:0.1"
                                                            Storyboard.TargetName="fore"
                                                            Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="300" />
            <RowDefinition Height="11*" />
        </Grid.RowDefinitions>
        <ListBox Name="ListBox1" Margin="10" Grid.Row="0">
            <StackPanel Margin="5">
                <DockPanel>
                    <TextBlock FontWeight="Bold"
                               Text="ID："
                               DockPanel.Dock="Left"
                               Margin="5,0,10,0"
                               Width="36" />
                    <TextBlock Text="  " />
                    <TextBlock x:Name="tb1"
                               Width="119" />
                </DockPanel>
                <DockPanel>
                    <TextBlock FontWeight="Bold"
                               Text="姓名："
                               DockPanel.Dock="Left"
                               Margin="5,0,10,0" />
                    <TextBlock Text="  " />
                    <TextBlock x:Name="tb2" />
                </DockPanel>
                <DockPanel>
                    <TextBlock FontWeight="Bold"
                               Text="部门："
                               DockPanel.Dock="Left"
                               Margin="5,0,10,0" />
                    <TextBlock Text="  " />
                    <TextBlock x:Name="tb3" />
                </DockPanel>
                <DockPanel>
                    <TextBlock FontWeight="Bold"
                               Text="职务："
                               DockPanel.Dock="Left"
                               Margin="5,0,10,0" />
                    <TextBlock Text="  " />
                    <TextBlock x:Name="tb4" />
                </DockPanel>
                <DockPanel>
                    <TextBlock FontWeight="Bold"
                               Text="邮箱："
                               DockPanel.Dock="Left"
                               Margin="5,0,10,0"
                               Width="36" />
                    <TextBlock Text="  " />
                    <TextBlock x:Name="tb5"
                               Width="119" />
                </DockPanel>
                <DockPanel>
                    <TextBlock FontWeight="Bold"
                               Text="手机："
                               DockPanel.Dock="Left"
                               Margin="5,0,10,0" />
                    <TextBlock Text="  " />
                    <TextBlock x:Name="tb6" />
                </DockPanel>
            </StackPanel>
            
        </ListBox>
        <ListBox Name="ListBox2"
                 Grid.Row="1"
                 Margin="10,0,10,50"
                 ItemsSource="{Binding Mode=OneWay}"
                 ItemTemplate="{StaticResource ListBoxTemplate1}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
        
        <Button Content="确定" Background="Red"
                Grid.Row="1"
                Height="23"
                HorizontalAlignment="Left"
                Margin="10,264,0,0"
                Name="button1"
                VerticalAlignment="Top"
                Width="75"
                Click="Confirm_Click" />
        <Button Content="取消" Background="Green"
                Grid.Row="1"
                Height="23"
                HorizontalAlignment="Left"
                Margin="143,264,0,0"
                Name="button2"
                VerticalAlignment="Top"
                Width="75"
                Click="Cancel_Click"/>
    </Grid>

</Window>
