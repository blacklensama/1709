                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0">截止时间</Label>
                            <ComboBox x:Name="day"
                                      Width="40"
                                      HorizontalAlignment="Center" MaxDropDownHeight="50"
