<sap:ActivityDesigner x:Class="Wxwinter.BPM.WFDesigner.CustomActivities.EquivalentDesigner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"
    xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation"
                      xmlns:main="clr-namespace:Wxwinter.BPM.WFDesigner">
    <sap:WorkflowItemsPresenter HintText="在此处放置活动"
                                                    FlowDirection="LeftToRight" AllowedItemType="{x:Type main:CustomActivity}"
                                                    Items="{Binding Path=ModelItem.Activity}">
    </sap:WorkflowItemsPresenter>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    
</sap:ActivityDesigner>
